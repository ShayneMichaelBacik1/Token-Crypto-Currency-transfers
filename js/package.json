{
  "name": "walletlink",
  "version": "0.1.0",
  "description": "WalletLink JavaScript SDK",
  "keywords": [
    "cipher",
    "cipherbrowser",
    "coinbase",
    "coinbasewallet",
    "eth",
    "ether",
    "ethereum",
    "etherium",
    "injection",
    "toshi",
    "wallet",
    "walletlink",
    "web3"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/CoinbaseWallet/walletlink.git",
  "author": "Coinbase, Inc.",
  "license": "Apache-2.0",
  "scripts": {
    "tsc": "tsc --noEmit --pretty",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "webpack --config webpack.config.js",
    "build-chrome": "webpack --config webpack.config.chrome.js",
    "build:dev": "export WALLETLINK_WEB_URL='http://localhost:3000'; yarn build && yarn build-chrome",
    "build:dev:watch": "nodemon -e ts,tsx,js,json --watch src/ --watch chrome/ --exec 'yarn build:dev'",
    "lint": "tslint -p . 'src/**/*.ts{,x}'",
    "lint:watch": "nodemon -e ts,tsx,js,json --watch src/ --exec 'yarn tsc && yarn lint'"
  },
  "dependencies": {
    "bind-decorator": "^1.0.11",
    "bn.js": "^4.11.8",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/bn.js": "^4.11.5",
    "@types/lodash": "^4.14.129",
    "@types/node": "^12.0.2",
    "copy-webpack-plugin": "^5.0.3",
    "core-js": "^2.6.5",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "raw-loader": "^2.0.0",
    "regenerator-runtime": "^0.13.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.1.1",
    "typescript": "^3.4.5",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "whatwg-fetch": "^3.0.0"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
